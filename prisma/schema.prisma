generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id Int @id @default(autoincrement())
  organizationName String
  organizationURL String
projects Project[]
  // members User[]
}

model Project {
id Int @id @default(autoincrement())
projectName String
projectURL String
organization Organization @relation(fields: [organizationId], references: [id])
organizationId Int
// members User[]
env Envs[]
}

